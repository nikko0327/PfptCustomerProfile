<!-- Displaying usage questions -->
<div id="usage" class="display-header">
    <div id="usageContainer">
        <div class="edit pull-right">
            <a href="#/" id="editUsageLink" aria-hidden="true" data-toggle="modal">
                <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
            </a>
        </div>
        <br>

        <form id="usageForm" autocomplete="off" action="../index/<%= encodeURIComponent(customer.name) %>?_method=PUT" method="POST">
            <fieldset id="usageFormFieldset" disabled>
                <div class="form-group col-4 response-cell" hidden>
                    <label for="customerName">Customer Name</label>
                    <input type="text" readonly class="form-control" placeholder="No response set" value="<%= customer.name %>" name="usage_questions[name]">
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4, response-checkbox">
                            <p>
                                <input type="checkbox" name="usage_questions[advanced_e_discovery]" <%- usage_questions.advanced_e_discovery ? "checked" : "" %> />
                                <b> Advanced E-Discovery</b>
                            </p>
                        </div>
                        <div class="col-4, response-checkbox">
                            <p>
                                <input type="checkbox" name="usage_questions[stubbing]" <%- usage_questions.stubbing ? "checked" : "" %> />
                                <b> Stubbing</b>
                            </p>
                        </div>
                        <div class="col-4, response-checkbox">
                            <p>
                                <input type="checkbox" name="usage_questions[cc_for_pst]" <%- usage_questions.cc_for_pst ? "checked" : "" %> />
                                <b> CC for PST</b>
                            </p>
                        </div>
                        <div class="col-4, response-checkbox">
                            <p>
                                <input type="checkbox" name="usage_questions[folder_sync]" <%- usage_questions.folder_sync ? "checked" : "" %> />
                                <b> Folder Sync</b>
                            </p>
                        </div>
                    </div>
                </div>

                <% include Usage/EditUsageLegal.ejs %>
                <% include Usage/EditUsageExport.ejs %>

                <!-- Outlook view manager -->


                <div class="row">
                    <div class="form-group col-4 response-cell">
                        <label>Will end user have access to their archives?</label>
                        <%- make_custom_dropdown("usage_questions[allow_archive_access]",
                            usage_questions.allow_archive_access, ["Yes", "No"]) %>
                    </div>
                </div>

                <br>
                <div class="form-group">
                    <label>Comments</label>
                    <textarea class="form-control" maxlength="5000" rows="5" name="usage_questions[comments]" placeholder="5000 characters max" form="usageForm"><%- usage_questions.comments %></textarea>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr class="rainbow">
