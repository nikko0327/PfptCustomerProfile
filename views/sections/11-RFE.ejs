<!-- Displaying RFEs -->
<div id="rfes" class="display-header">
    <h5>
        <a href="#rfeContent" data-toggle="collapse" onclick="change_arrow($(this));">
            RFEs
            <i class="fa fa-caret-right" aria-hidden="true"> </i>
        </a>
    </h5>

    <div id="rfeContent" class="collapse">
        <div class="edit pull-right">
            <a href="#/" aria-hidden="true" id="editRFELink" data-toggle="modal">
                <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
            </a>
        </div>
        <br>

        <form id="rfeForm" autocomplete="off" action="/index/<%= encodeURIComponent(customer.name) %>?_method=PUT" method="POST">
            <fieldset id="rfeFormFieldset" disabled>
                <div class="form-group col-4 response-cell" hidden>
                    <label for="customerName">Customer Name</label>
                    <input type="text" readonly class="form-control" placeholder="No response set" value="<%= customer.name %>" name="rfe_questions[name]">
                </div>
                <div class="row">
                    <div class="form-group col-4 response-cell">
                        <label>Showstoppers (Will not buy w/o)</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= rfe_questions.showstoppers_buy %>" name="rfe_questions[showstoppers_buy]">
                    </div>
                    <div class="form-group col-4 response-cell">
                        <label>Showstoppers (Will not rollout w/o)</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= rfe_questions.showstoppers_rollout %>" name="rfe_questions[showstoppers_rollout]">
                    </div>
                    <div class="form-group col-4 response-cell">
                        <label>Parity features</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= rfe_questions.parity_features %>" name="rfe_questions[parity_features]">
                    </div>
                    <div class="form-group col-4 response-cell">
                        <label>Nice to haves</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= rfe_questions.nice_to_haves %>" name="rfe_questions[nice_to_haves]">
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr class="rainbow">
